{
  "name": "Steal Meme",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Steal meme, that's all",
  "homepage_url": "https://github.com/nerdywoffy/stealmeme",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "options_page": "src/options_custom/index.html",
  "permissions": [
    "downloads",
    "contextMenus",
    "https://*/*",
    "http://*/*"
  ]
}